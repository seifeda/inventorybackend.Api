Authorization: Bearer {{authToken}}
Content-Type: application/json

{
    "sku": "ITEM001",
    "name": "Updated Item",
    "description": "Updated Description",
    "quantity": 150,
    "costPrice": 11.99,
    "sellingPrice": 21.99,
